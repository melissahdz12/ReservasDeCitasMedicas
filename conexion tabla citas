conexion tablas_citas


CREATE TABLE "TABLAS_CITAS"."CITAS"
  (
    "IDCITA"      NUMBER,
    "ID_PACIENTE" NUMBER,
    "ID_DOCTOR"   NUMBER,
    "FECHA" DATE,
    CONSTRAINT "PK_CITA" PRIMARY KEY ("IDCITA") USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645 PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT) TABLESPACE "USERS" ENABLE,
    CONSTRAINT "FK1_CITAS" FOREIGN KEY ("ID_PACIENTE") REFERENCES "TABLAS_CITAS"."PACIENTES" ("IDPACIENTE") ENABLE,
    CONSTRAINT "FK2_CITAS" FOREIGN KEY ("ID_DOCTOR") REFERENCES "TABLAS_CITAS"."DOCTORES" ("IDDOCTOR") ENABLE
  )


CREATE TABLE "TABLAS_CITAS"."DOCTORES"
  (
    "IDDOCTOR"     NUMBER,
    "NOMBREDOCTOR" VARCHAR2(45 BYTE),
    "CLINICA"      VARCHAR2(45 BYTE),
    "ESPECIALIDAD" VARCHAR2(45 BYTE),
    CONSTRAINT "PK_DOCTOR" PRIMARY KEY ("IDDOCTOR") USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645 PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT) TABLESPACE "USERS" ENABLE
  )

CREATE TABLE "TABLAS_CITAS"."PACIENTES"
  (
    "IDPACIENTE"     NUMBER,
    "NOMBREPACIENTE" VARCHAR2(45 BYTE),
    CONSTRAINT "PK_PACIENTE" PRIMARY KEY ("IDPACIENTE") USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645 PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT) TABLESPACE "USERS" ENABLE
  )

CREATE TABLE "TABLAS_CITAS"."PETICIONES"
  (
    "IDPETICION"   NUMBER,
    "IDPACIENTE"   NUMBER,
    "ESPECIALIDAD" VARCHAR2(45 BYTE),
    "FECHAINICIO" DATE,
    "FECHAFIN" DATE,
    "ESTADO" NUMBER,
    PRIMARY KEY ("IDPETICION") USING INDEX PCTFREE 10 INITRANS 2 MAXTRANS 255 COMPUTE STATISTICS STORAGE(INITIAL 65536 NEXT 1048576 MINEXTENTS 1 MAXEXTENTS 2147483645 PCTINCREASE 0 FREELISTS 1 FREELIST GROUPS 1 BUFFER_POOL DEFAULT) TABLESPACE "USERS" ENABLE
  )

CREATE TABLE "TABLAS_CITAS"."RECHAZADOS"
  (
    "IDPETICION"   NUMBER,
    "IDPACIENTE"   NUMBER,
    "ESPECIALIDAD" VARCHAR2(45 BYTE),
    "FECHAINICIO" DATE,
    "FECHAFIN" DATE
  )
